    <!-- Deletion buttons -->
    <div class="form-section">
        <div class="form-description">
            <button type="button" id="clear-items" class="import-button">Delete items compendium</button>
            <button type="button" id="clear-spells" class="import-button">Delete spells compendium</button>
            <button type="button" id="clear-monsters" class="import-button">Delete monsters compendium</button>
